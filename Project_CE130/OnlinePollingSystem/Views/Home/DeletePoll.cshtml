@model OnlinePollingSystem.Models.Poll

@{
    ViewData["Title"] = "DeletePoll";
}

<h1>Delete Poll</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Poll</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Que)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Que)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Votes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Votes)
        </dd>
